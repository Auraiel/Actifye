<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <!-- Основной контент -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#00000000"
            android:elevation="4dp"
            android:theme="@style/ToolbarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/menu" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/logo_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_logo"
                    android:contentDescription="@string/logo" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/profile"
                    android:src="@drawable/ic_profile" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_horizontal">

            <!-- Subscription Option 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/subscription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@color/blue">

                    <TextView
                        android:id="@+id/subscriptionTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/subscriptionPrice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.99€"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/subscriptionDetails1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ No add.\n+ Free enter to private lobbies."
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Subscription Option 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/subscription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@color/green">

                    <TextView
                        android:id="@+id/subscriptionTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pro"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/subscriptionPrice2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9.99€"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/subscriptionDetails2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ No add.\n+ Free enter to private lobbies.\n+ Creation of private parties.\n+ Creation fast-cup groups.\n+ Special profile pictures"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Subscription Option 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/subscription3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@color/red">

                    <TextView
                        android:id="@+id/subscriptionTitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elite"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/subscriptionPrice3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19.99€"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/subscriptionDetails3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ No add.\n+ Free enter to private lobbies.\n+ Creation of private parties.\n+ Creation fast-cup groups.\n+ Special profile pictures.\n+ Creation new marks on map for public events.\n+ Being the first at queue of lobbies in recommendations."
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <!-- Другие элементы UI -->
    </RelativeLayout>

    <!-- Навигационное меню -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        />

</androidx.drawerlayout.widget.DrawerLayout>
