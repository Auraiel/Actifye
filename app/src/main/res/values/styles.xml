<?xml version="1.0" encoding="utf-8"?>
<!-- Base application theme. -->
<resources>
    <style name="Theme.Actifye" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/klein</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyMenuIconsStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">86dp</item> <!-- Ширина иконки -->
        <item name="android:minHeight">86dp</item> <!-- Высота иконки -->
    </style>

    <!-- Стиль для увеличения размера текста -->
    <style name="MyMenuTextStyle">
        <item name="android:textSize">24sp</item> <!-- Размер текста -->
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionButtonStyle">@style/MyMenuIconsStyle</item>
        <item name="android:itemTextAppearance">@style/MyMenuTextStyle</item>
    </style>
    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>